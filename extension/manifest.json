{
  "name": "Pretty Print Gmail",
  "short_name": "PrettyPrint",
  "description": "Cleans up printing for Gmail.",
  "version": "1.2.4",
  "permissions": [
    "activeTab",
    "https://mail.google.com/mail/u/*",
    "tabs"
  ],
  "icons": {
    "16": "assets/icon-16.png",
    "24": "assets/icon-24.png",
    "32": "assets/icon-32.png",
    "128": "assets/icon-128.png"
  },
  "background": {
    "scripts": [
      "src/background.js"
    ],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": [
        "https://mail.google.com/mail/u/*view=pt*&msg=*"
      ],
      "js": [
        "src/print.js"
      ],
      "run_at": "document_end"
    }
  ],
  "commands": {
    "_execute_browser_action": {
      "suggested_key": {
        "windows": "Alt+P",
        "mac": "Alt+P",
        "chromeos": "Alt+P",
        "linux": "Alt+P"
      }
    }
  },
  "browser_action": {
    "default_title": "Pretty Print Gmail",
    "default_icon": "assets/icon-16.png"
  },
  "manifest_version": 2
}