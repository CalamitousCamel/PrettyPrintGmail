{
  "name": "Pretty Print Gmail",
  "short_name": "PPG",
  "description": "Clean up printing for Gmail",
  "version": "1.01",
  "permissions": [
  "activeTab", "https://mail.google.com/mail/u/0/*"
  ],
  "icons": { "16": "assets/icon-16.png",
           "24": "assets/icon-24.png",
           "32": "assets/icon-32.png",
          "128": "assets/icon-128.png" },
  "background": {
    "scripts": ["src/background.js"],
    "persistent": false
  },
  "browser_action": {
      "default_title": "Pretty print this email!",
      "default_icon": "assets/icon-16.png"
  },
  "manifest_version": 2
}
